public class Main
{
	public static void main(String[] args) {
		String myStr = "апапаФФФФ";
		char arr [] = myStr.toCharArray();
		for (int i = 0; i < arr.length; i++){
		    if (Character.isLetter(arr[i]) &&  Character.isLowerCase(arr[i])){
		        arr[i] = (char)(arr[i] - 32);
		    } else if (Character.isLetter(arr[i]) &&  Character.isUpperCase(arr[i])){
		        arr[i] = (char)(arr[i] + 32);
		    } 
		}
		String str = new String(arr);
		System.out.print(str);
	}
}
